{
  "settings": {
    "analysis": {
      "filter": {
        "pl_PL": {
          "type": "hunspell",
          "locale": "pl_PL",
          "dedup": true
        }
      },
      "analyzer": {
        "polish_analyzer": {
          "type": "custom",
          "tokenizer": "lowercase",
          "filter": [
            "lowercase",
            "pl_PL"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
        "url": {
            "type": "text",
            "analyzer": "keyword",
            "fielddata": true
        },
        "body": {
            "type": "text",
            "analyzer": "polish_analyzer",
            "search_analyzer": "polish_analyzer",
            "search_quote_analyzer": "polish_analyzer",
            "fielddata": "true",
            "fields": {
                "text": {
                    "type": "text",
                    "store": true
                }
            }
        },
        "fakebility": {
            "type": "long"
        }
    }
  }
}